
ol#iterations li article.current{
  z-index: 99;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  &:before{
    height: 100px;
  }
  .present{display:none;}
  menu{
    display: block;
    width: auto;
    height: 100px;
    border-top: 0 none;
    li{
      height: 100%;
      font-size: 1em;
      menu{
        width: auto; 
        li{
          border: 0 none;
          display: block;
          height: auto;
        }
      }
    }
  }
  &.chore menu .type,
  &.bug menu .type{
    &:after{
      line-height: 100px;
      font-size: 80px;
      margin: 10px 0 0 100px;
    }
  }
  menu li.estimate strong{
    font-size: 75px;
    line-height: 100px;
  }
  h3{
    line-height: 60px;
    font-size: 48px;
    margin: 20px;
  }
  details summary:after{
    display: block;
    margin: -40px 0 20px;
    content: "+";
  }
  details[open] summary:after{
    content: "-";
  }
}
details summary::-webkit-details-marker { display:none; }
