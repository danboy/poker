
ol#iterations li article.current{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  &:before{
    height: 100px;
  }
  menu{
    display: block;
    width: auto;
    height: 100px;
    li{
      height: 100%;
      font-size: 1em;
    }
  }
  &.chore menu .type,
  &.bug menu .type{
    &:after{
      line-height: 100px;
      font-size: 80px;
      margin: 10px 0 0 100px;
    }
  }
  menu li.estimate strong{
    font-size: 75px;
    line-height: 100px;
  }
  h3{
    line-height: 60px;
    font-size: 48px;
    margin: 20px;
  }
  details summary:after{
    display: block;
    margin: -40px 0 20px;
    content: "+";
  }
  details[open] summary:after{
    content: "-";
  }
}
details summary::-webkit-details-marker { display:none; }
