/* STORIES */

ol#iterations{
  list-style: none;
  
}

ol#iterations li{
  list-style: none;
  border: 1px solid #DDD;
  background: #EEE;
  border-radius: 2px;
  font-size: 1.6em;
  margin-bottom: 1.25em;
  margin-top: 1.25em;
  padding: 1.25em;
}

ol#iterations li article{
  border: 1px solid #DDD;
  background: #FFF;
  border-radius: 2px;
  margin: 10px 0;
  overflow: hidden;
  &:before{
    display: block;
    float: left;
    height: 40px;
    content: '';
    border-left: 5px solid #89B556;
    margin: 0;
    padding: 0;
    line-height: 40px;
    vertical-align: middle;
  }
  &.bug:before{
    border-left-color: #900;
  }
  &.bug menu .type{
    display: inline-block;
    text-indent: -80px;
    &:after{
      content: '#';
      color: #900;
      display: inline-block;
      margin: 4px 0 0 75px;
      line-height: 40px;
      font-size: 30px;
      font-family: pinmonkey;
    }
  }
  &.chore:before{
    border-left-color: #FC0;
  }
  &.chore menu .type{
    display: inline-block;
    text-indent: -80px;
    &:after{
      content: '{';
      color: #FC0;
      display: inline-block;
      margin: 4px 0 0 70px;
      line-height: 40px;
      font-size: 30px;
      font-family: pinmonkey;
    }
  }
  details{
    padding: 0 15px;
    color: #666;
    white-space:pre-line;
  }
  .notes{
    position: relative;
    z-index: 0;
  }
  .note{
    border: 1px solid #DDA;
    margin: 10px 10px 20px;
    padding: 10px;
    display: inline-block;
    width: 350px;
    vertical-align: top;
    position: relative;
    background-image:-moz-linear-gradient(center bottom, #f8f8C8 11%, #ffc 56%);
    background-image:-webkit-gradient(linear, left bottom, left top, color-stop(0.11, #f8f8C8), color-stop(0.56, #ffc));
    -moz-box-shadow:0 0 2px rgba(0, 0, 0, 0.2),0 0 65px #EEB inset, 0 0 20px #f9f9C9 inset;
    -webkit-box-shadow:0 0 2px rgba(0, 0, 0, 0.2),0 0 65px #EEB inset, 0 0 20px #f9f9C9 inset;
    box-shadow:0 0 2px rgba(0, 0, 0, 0.2),0 0 65px #EEB inset, 0 0 20px #f9f9C9 inset;
  }
  .note:before,
  .note:after{
    content: "";
    position: absolute;
    z-index: -1;
    bottom: 15px;
    left: 5px;
    width: 50%;
    height: 20%;
    -webkit-box-shadow: 0 15px 10px rgba(0, 0, 0, 0.5);
    -moz-box-shadow: 0 15px 10px rgba(0, 0, 0, 0.5);
    box-shadow: 0 15px 10px rgba(0, 0, 0, 0.5);
    -webkit-transform: rotate(-2deg);
    -moz-transform: rotate(-2deg);
    -o-transform: rotate(-2deg);
    transform: rotate(-2deg);
  }

  .note:after{
    right: 5px;
    left: auto;
    -webkit-transform: rotate(2deg);
    -moz-transform: rotate(2deg);
    -o-transform: rotate(2deg);
    transform: rotate(2deg);
  }
}
