extends layout
block content
  .row
    .sixteen
      h2 Enter your pivotal login
      form( action='/', method='post', 'class'='step1' )
        fieldset
          div
            label( for='login' ) pivotal login
            - if (!username){var username='';}
            input( name='username' , required='required', placeholder='user@email.com', type='email')
          div
            label( for='password' ) pivotal password
            input( name='password', type='password', required='required')
          div.submit
            input.button( type='submit', id='login' )
      h2 Or enter Your Pivotal API key.
      form( action='/', method='post', 'class'='step1' )
        fieldset
          div
            label( for='key' ) pivotal API key
            input( name='key', required='required' )
          div.submit
            input.button( type='submit', id='login' )
